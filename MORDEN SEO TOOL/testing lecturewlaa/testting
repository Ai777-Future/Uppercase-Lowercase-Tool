<!-- Custom Button Script -->
<script>
  document.getElementById("custom-callback-btn").addEventListener("click", function () {
    const openEvent = new Event("whatsform:open");
    window.dispatchEvent(openEvent);
  });

  // Hide original button when it loads
  const hideDefaultBtn = setInterval(() => {
    const defaultBtn = document.querySelector(".whatsform-launcher-button");
    if (defaultBtn) {
      defaultBtn.style.display = "none";
      clearInterval(hideDefaultBtn);
    }
  }, 500);
</script>



